      <Version>3.6.0</Version>
    </PackageReference>
    <PackageReference Include="NUnit.Extension.TeamCityEventListener">
      <Version>1.0.6</Version>
    </PackageReference>
    <PackageReference Include="NUnit.Extension.VSProjectLoader">
      <Version>3.8.0</Version>
    </PackageReference>
