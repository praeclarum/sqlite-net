      <Version>3.10.0</Version>
    </PackageReference>
    <PackageReference Include="NUnit.Extension.NUnitProjectLoader">
      <Version>3.6.0</Version>
    </PackageReference>
    <PackageReference Include="NUnit.Extension.NUnitV2Driver">
      <Version>3.7.0</Version>
    </PackageReference>
